<h1><%= @user.firstname %>'s Profile Page</h1>


<%= link_to "Add Photo Album", new_album_path %>
<br>
<br>

<table>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to 'View Album', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% @posts.each do |post| %>
  <% if post.user_id == @user.id %>
    <p><%= post.message %></p><br>
  <% end %>
<% end %>
